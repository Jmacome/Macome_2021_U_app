<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1"
    crossorigin="anonymous">
    <title>defect_main</title>
</head>

<body>

    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>

    <div class="container-fluid mt-5">

        <div class="row">
        
            <div class="col-5">
                <h1>重点管理不良特性一覧</h1>
            </div>

<!-- Display only the active button which indicates the shift -->
            <div class="col-3">
                <a href="#" class="btn btn-success"><h3>普</h3></a>

                <a href="#" class="btn btn-success"><h3>1s</h3></a>

                <a href="#" class="btn btn-success"><h3 >2s</h3></a>

                <a href="#" class="btn btn-success"><h3 >3s</h3></a>
            </div>
<!-- Display only the active button which indicates the shift -->

            <div class="col-md-3 ms-auto">
                <a href="#" class="btn btn-primary"> <h2>確定</h2> </a>

                <a href="/defective/select" class="btn btn-primary"> <h6>重点管理<br>項目選択</h6> </a>

                <a href="/defective/all" class="btn btn-primary"><h6>不良全項目<br>表示</h6> </a>

                <a href="/defective" class="btn btn-primary"> <h2>戻る</h2> </a>
            </div>
        </div>
    </div>


  <!-- Add a button to update the defective count and it should be increased by 1 when pressed the up icon and minus 1 when pressed the bellow icon-->
    <div class="container-fluid mt-5">

        <div class="row">
            <div class="col-4">
                <table class="table table-bordered table-striped table-hover table-success">
                    <thead>
                        <tr>
                            <th scope="col" style="background-color: rgb(37, 119, 187); color: white;"><h3>不良コード</h3></th>
                            <th scope="col" style="background-color: rgb(37, 119, 187); color: white;"><h3>不良特性</h3></th>
                            <th scope="col" style="background-color: rgb(37, 119, 187); color: white;"><h3></h3></th>
                        </tr>
                    </thead>

                    <tbody>
                        <% results.forEach(item => {%>
                        <% if (item['importance_flag'] == 1 && item['m_defective_group_group_code'] == 1) {%>
                        <tr>
                            <td><h3> <%= item['defective_code'] %> </h3></td>
                            <td><h4> <%= item['defective_name'] %> </h4></td>
                            <td><h4> <%= item['importance_flag'] %> </h4></td> 
                        </tr>
                        <%}%>
                        <% })%>
                    </tbody>

                </table>
            </div>

            <div class="col-4">
                <table class="table table-bordered table-striped table-hover table-success">
                    <thead>
                        <tr>
                            <th scope="col" style="background-color: rgb(37, 119, 187); color: white;"><h3>不良コード</h3></th>
                            <th scope="col" style="background-color: rgb(37, 119, 187); color: white;"><h3>不良特性</h3></th>
                            <th scope="col" style="background-color: rgb(37, 119, 187); color: white;"><h3></h3></th>
                        </tr>
                    </thead>

                    <tbody>
                        <% results.forEach(item => {%>
                        <% if (item['importance_flag'] == 1  && item['m_defective_group_group_code'] == 2) {%>
                        <tr>
                            <td><h3> <%= item['defective_code'] %> </h3></td>
                            <td><h4> <%= item['defective_name'] %> </h4></td>
                            <td><h4> <%= item['importance_flag'] %> </h4></td>                                                                  
                        </tr>
                        <%}%>
                        <% })%>
                    </tbody>
                </table>
            </div>

            <div class="col-4">
                <table class="table table-bordered table-striped table-hover table-success">
                    <thead>
                        <tr>
                            <th scope="col" style="background-color: rgb(37, 119, 187); color: white;"><h3>不良コード</h3></th>
                            <th scope="col" style="background-color: rgb(37, 119, 187); color: white;"><h3>不良特性</h3></th>
                            <th scope="col" style="background-color: rgb(37, 119, 187); color: white;"><h3></h3></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% results.forEach(item => {%>
                        <% if (item['importance_flag'] == 1  && item['m_defective_group_group_code'] == 3) {%>
                        <tr>
                            <td><h3> <%= item['defective_code'] %> </h3></td>
                            <td><h4> <%= item['defective_name'] %> </h4></td>
                            <td><h4> <%= item['importance_flag'] %> </h4></td> 
                        </tr>
                        <%}%>
                        <% })%>
                    </tbody>
                </table>
            </div>    
        </div>
    </div>
</body>
</html>